<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
            android:opacity="opaque" tools:ignore="MissingDefaultResource" tools:targetApi="m">
    <item android:drawable="@drawable/no_chips"
          android:width="250dp"
          android:height="250dp"
          android:gravity="center" />
</layer-list>