<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent" android:layout_height="match_parent"
                                             tools:targetApi="o"
                                             tools:context=".SigninActivity" >
    <ImageView android:id="@+id/signin_logo"
               android:src="@drawable/ic_twitter_bird_logo"
               android:contentDescription="@null"
               android:layout_width="75dp" android:layout_height="75dp"
               android:layout_marginTop="30dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="@+id/guideline5"/>
    <TextView android:id="@+id/signin_headline"
              android:text="@string/signup_title"
              style="@style/TextAppearance.AppCompat.Headline"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              app:layout_constraintTop_toBottomOf="@id/signin_logo"
              app:layout_constraintStart_toStartOf="@+id/guideline5"/>
    <EditText android:id="@+id/signin_edit_name"
              android:inputType="textPersonName"
              android:autofillHints="@string/field_name" android:hint="@string/field_name"
              android:layout_width="0dp" android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              app:layout_constraintTop_toBottomOf="@id/signin_headline"
              app:layout_constraintRight_toRightOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline5"
              app:layout_constraintEnd_toStartOf="@+id/guideline6"/>
    <EditText android:id="@+id/signin_edit_pass"
              android:inputType="textPassword"
              android:autofillHints="@string/field_pass" android:hint="@string/field_pass"
              android:layout_width="0dp" android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              app:layout_constraintTop_toBottomOf="@id/signin_edit_name"
              app:layout_constraintRight_toRightOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline5"
              app:layout_constraintEnd_toStartOf="@+id/guideline6"/>
    <EditText android:id="@+id/signin_edit_passConfirm"
              android:inputType="textPassword"
              android:autofillHints="@string/field_passConfirm" android:hint="@string/field_passConfirm"
              android:layout_width="0dp" android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              app:layout_constraintTop_toBottomOf="@id/signin_edit_pass"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/guideline6"
              app:layout_constraintStart_toStartOf="@+id/guideline5"/>
    <EditText android:id="@+id/signin_edit_email"
              android:inputType="textEmailAddress"
              android:autofillHints="@string/field_mail" android:hint="@string/field_mail"
              android:layout_width="0dp" android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              app:layout_constraintTop_toBottomOf="@id/signin_edit_passConfirm"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/guideline6"
              app:layout_constraintStart_toStartOf="@+id/guideline5"/>
    <TextView android:id="@+id/signin__startPhone"
              android:text="@string/InitPhone"
              android:textSize="17sp"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              app:layout_constraintTop_toBottomOf="@id/signin_edit_email"
              app:layout_constraintStart_toStartOf="@+id/guideline5"/>
    <EditText android:id="@+id/signin_edit_phone"
              android:inputType="phone"
              android:autofillHints="@string/field_tel" android:hint="@string/field_tel"
              android:maxLength="10"
              android:layout_width="150dp" android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              app:layout_constraintLeft_toRightOf="@id/signin__startPhone"
              app:layout_constraintBaseline_toBaselineOf="@+id/signin__startPhone"/>
    <Button android:id="@+id/signin_btn_signin"
            android:text="@string/signup"
            style="@style/Button"
            android:background="@drawable/ic_button_rounded"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/signin_edit_phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline5"/>
    <TextView android:id="@+id/signin_advise"
              style="@style/TextAppearance.AppCompat.Caption"
              android:layout_marginTop="5dp"
              android:textColor="@color/red"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="@+id/signin_btn_signin" app:layout_constraintEnd_toEndOf="@+id/signin_btn_signin"
              app:layout_constraintTop_toBottomOf="@+id/signin_btn_signin"/>
    <Button android:id="@+id/signin_btn_switch"
            android:text="@string/login"
            android:textSize="@dimen/Text_Caption"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintRight_toRightOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.50"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.05"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.95 "/>
</android.support.constraint.ConstraintLayout>