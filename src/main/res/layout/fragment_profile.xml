<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent" android:layout_height="match_parent"
                                             tools:targetApi="m"
                                             tools:context=".ProfileFragment">
    <android.support.v7.widget.CardView android:id="@+id/item_container_icon"
                                        app:cardBackgroundColor="@color/colorDivider"
                                        app:cardCornerRadius="60dp"
                                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintBottom_toTopOf="@+id/guideline7">
        <ImageView android:id="@+id/item_icon"
                   android:src="@drawable/ic_twitter_bird_logo"
                   android:contentDescription="@null"
                   android:scaleType="centerCrop"
                   android:layout_width="@dimen/IconReallyBig" android:layout_height="@dimen/IconReallyBig"/>
    </android.support.v7.widget.CardView>
    <TextView android:id="@+id/item_title"
              android:text="Gustavo Alain Peduzzi Acevedo"
              android:textAlignment="center"
              style="@style/Text.Title"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="32dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="@+id/guideline7"/>
    <LinearLayout android:id="@+id/container_mail"
                  android:clickable="true" android:focusable="true"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="64dp"
                  app:layout_constraintStart_toStartOf="@+id/guideline8"
                  app:layout_constraintTop_toBottomOf="@id/item_title">
        <TextView android:id="@+id/mail_previusly"
                  android:text="@string/mail"
                  style="@style/Text"
                  android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:id="@+id/mail"
                  android:text="gustavojuantio@gmail.com"
                  style="@style/Text.Bold"
                  android:textStyle="normal"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginStart="12dp" />
    </LinearLayout>
    <LinearLayout android:id="@+id/container_tel"
                  android:clickable="true" android:focusable="true"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="32dp"
                  app:layout_constraintStart_toStartOf="@+id/guideline8"
                  app:layout_constraintTop_toBottomOf="@id/container_mail">
        <TextView android:id="@+id/tel_previusly"
                  android:text="@string/phone"
                  style="@style/Text"
                  android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:id="@+id/tel"
                  android:text="5583599322"
                  style="@style/Text.Bold"
                  android:textStyle="normal"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginStart="12dp" />
    </LinearLayout>
    <Button android:id="@+id/button_go_settings"
            android:text="@string/title_settings"
            style="@style/Button.Secondary"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="10dp"
            android:drawableTint="?attr/editTextColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="@+id/guideline8" app:layout_constraintBottom_toBottomOf="parent"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline7"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.25"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline8"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.05"/>
</android.support.constraint.ConstraintLayout>