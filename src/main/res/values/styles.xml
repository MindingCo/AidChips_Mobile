<resources xmlns:tools="http://schemas.android.com/tools"
           tools:targetApi="o">
    <style name="Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColor">@color/colorTextSecondary</item>-->
    </style>
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/splash</item>
    </style>
    <style name="Splash.Post" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="Item">
        <item name="android:paddingTop"> 5dp </item>
        <item name="android:layout_marginBottom"> 2dp </item>
    </style>
    <style name="EditText" parent="Widget.AppCompat.EditText">
    </style>
    <style name="FAB" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_margin">@dimen/Margin</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">3dp</item>
    </style>
    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/ic_button_rounded</item>
        <item name="android:layout_marginHorizontal"> @dimen/MarginReallyLittle </item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>
    <style name="Button.Secondary" parent="Button">
        <item name="android:background">@drawable/ic_button_secondary_rounded</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Button.Twin" parent="Button">
    </style>
</resources>